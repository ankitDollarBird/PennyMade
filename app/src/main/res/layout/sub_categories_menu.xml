<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutForCategory"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:background="@null"
        app:boxBackgroundColor="@null"
        app:endIconDrawable="@drawable/icon_spinner_down_arrow"
        app:endIconTint="@color/text_white_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/tv_for_categories_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:background="@drawable/exposed_menu_brown_background"
            android:dropDownHeight="200dp"
            android:ellipsize="end"
            android:inputType="none"
            android:overScrollMode="always"
            android:padding="16dp"
            android:singleLine="true"
            android:text="Philatelic Books"
            android:textColor="@color/text_white_color"
            app:simpleItemLayout="@layout/filters_dropdown_item"
            app:simpleItemSelectedColor="@color/primary_color"
            app:simpleItemSelectedRippleColor="@color/pink" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>